<%- include('partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>Usuários</h2>
  <a href="/usuarios/novo" class="btn btn-success">+ Novo Usuário</a>
</div>

<div class="row mb-4">
  <div class="col-md-3">
    <div class="card bg-primary text-white text-center shadow-sm">
      <div class="card-body">
        <h6>Total de Usuários</h6>
        <h3>125</h3>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card bg-success text-white text-center shadow-sm">
      <div class="card-body">
        <h6>Ativos</h6>
        <h3>98</h3>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card bg-warning text-dark text-center shadow-sm">
      <div class="card-body">
        <h6>Novos (7d)</h6>
        <h3>12</h3>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card bg-dark text-white text-center shadow-sm">
      <div class="card-body">
        <h6>Admins</h6>
        <h3>5</h3>
      </div>
    </div>
  </div>
</div>
<table class="table table-hover shadow-sm">
  <thead class="table-dark">
    <tr>
      <th>#</th>
      <th>Nome</th>
      <th>E-mail</th>
      <th>Cadastro</th>
      <th>Acesso</th>
      <th>CPF</th>
      <th>Endereço</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% usuarios.forEach((usuario, index) => { %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= usuario.nome %></td>
        <td><%= usuario.email %></td>
        <td><%= usuario.cadastro %></td>
        <td><%= usuario.acesso %></td>
        <td><%= usuario.cpf %></td>
        <td><%= usuario.endereco %></td>
        <td>
          <button class="btn btn-sm btn-outline-primary me-1"><i class="bi bi-eye"></i></button>
          <button class="btn btn-sm btn-outline-success me-1"><i class="bi bi-pencil"></i></button>
          <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>



<%- include('partials/footer') %>
